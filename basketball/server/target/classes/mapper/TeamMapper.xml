<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- namespace等于mapper接口类的全限定名,这样实现对应 -->
<mapper namespace="server.mapper.TeamMapper">
    <select id="selectteams" resultType="com.basketball.vo.team.SelectTeamsVO">
        select id,
        name,
        contact_phone,
        address,
        logo,
        established_date
        from team
        <where>
            <if test="name!= null">
                team.name LIKE CONCAT('%',#{name},'%')
            </if>
        </where>
    </select>
</mapper>